{
  "compilerOptions": {
    "baseUrl": ".",
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "lib": [
      "dom",
      "esnext"
    ],
    "module": "commonjs",
    "noEmit": true,
    "noUnusedLocals": false,
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    "strict": true,
    "target": "esnext"
  },
  "exclude": [
    "node_modules",
    "public",
    ".cache"
  ],
  "include": [
    ".eslintrc.js",
    "src/"
  ]
}
